<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.hk.lang_data_manager.activity.LoginActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/m160">

        <EditText
            android:id="@+id/et_account"
            android:textColor="@color/bg2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/m43"
            android:layout_marginLeft="@dimen/m30"
            android:layout_marginRight="@dimen/m30"
            android:layout_marginTop="@dimen/m34"
            android:background="@drawable/edit_bg"
            android:drawableLeft="@mipmap/login_user"
            android:drawablePadding="@dimen/m8"
            android:padding="@dimen/m8"
            android:hint="请输入账号"
            android:textSize="@dimen/m14" />

        <EditText
            android:id="@+id/et_password"
            android:textColor="@color/bg2"
            android:inputType="textPassword"
            android:layout_width="match_parent"
            android:layout_height="@dimen/m43"
            android:layout_marginLeft="@dimen/m30"
            android:layout_marginRight="@dimen/m30"
            android:layout_marginTop="@dimen/m12"
            android:drawablePadding="@dimen/m8"
            android:background="@drawable/edit_bg"
            android:drawableLeft="@mipmap/login_password"
            android:padding="@dimen/m8"
            android:hint="请输入密码"
            android:textSize="@dimen/m14" />


        <TextView
            android:gravity="center"
            android:onClick="login"
            android:layout_marginTop="@dimen/m99"
            android:layout_marginLeft="@dimen/m30"
            android:layout_marginRight="@dimen/m30"
            android:background="@drawable/round_theme_m5"
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="@dimen/m43"
            android:text="登录"/>

    </LinearLayout>
</LinearLayout>
