<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal">
    <ImageView
        android:layout_width="@dimen/m100"
        android:layout_height="@dimen/m100"
        android:background="@mipmap/head"
        android:layout_marginTop="@dimen/m120"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="管理员账号"
        android:textSize="@dimen/m12"
        android:layout_marginTop="@dimen/m20"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="13000000"
        android:id="@+id/tv_admin"
        android:textColor="@color/black"
        android:layout_marginTop="@dimen/m5"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="当前版本：v1.0.7"
        android:id="@+id/tv_banben"
        android:textColor="@color/black"
        android:layout_marginTop="@dimen/m5"/>
    <TextView
        android:layout_marginTop="@dimen/m219"
        android:layout_width="@dimen/m200"
        android:layout_height="@dimen/m45"
        android:text="退出登录"
        android:id="@+id/tv_go_out"
        android:textColor="@color/white"
        android:gravity="center"
        android:textSize="@dimen/m13"
        android:background="@drawable/btn_login"/>
</LinearLayout>