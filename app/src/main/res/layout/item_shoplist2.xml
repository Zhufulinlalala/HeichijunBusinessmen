<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/m0.5"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="match_parent">
            <View
                android:id="@+id/v_line1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/m10"
                android:layout_marginRight="@dimen/m10"
                android:background="#d9d9d9"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent">
            <View
                android:id="@+id/v_line2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/m10"
                android:layout_marginRight="@dimen/m10"
                android:background="#d9d9d9"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent">
            <View
                android:id="@+id/v_line3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/m10"
                android:layout_marginRight="@dimen/m10"
                android:background="#d9d9d9"/>
        </LinearLayout>
    </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="@dimen/m35"
    android:orientation="horizontal">
    <TextView
        android:id="@+id/tv_goods_name"
        android:layout_width="0dp"
        android:layout_weight="5"
        android:text="sdas"
        android:gravity="center"
        android:textSize="@dimen/m12"
        android:layout_height="match_parent"/>
    <View
        android:layout_width="@dimen/m2"
        android:layout_height="match_parent"
        android:background="@color/black"/>
    <TextView
        android:id="@+id/tv_nums"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:text="sdas"
        android:gravity="center"
        android:textSize="@dimen/m12"
        android:layout_height="match_parent"/>
    <View
        android:layout_width="@dimen/m2"
        android:layout_height="match_parent"
        android:background="@color/black"/>
    <TextView
        android:id="@+id/tv_moneys"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:text="sdas"
        android:gravity="center"
        android:textSize="@dimen/m12"
        android:layout_height="match_parent"/>
</LinearLayout>
    <View
        android:id="@+id/v_under"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/m2"
        android:background="@color/black"/>
</LinearLayout>