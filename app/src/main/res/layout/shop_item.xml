<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/m86"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:background="@color/white">

        <ImageView
            android:id="@+id/iv_pic"
            android:layout_width="@dimen/m62"
            android:layout_height="@dimen/m62"
            android:layout_marginLeft="@dimen/m14"
            android:layout_marginTop="@dimen/m3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/m18"
            android:layout_marginLeft="@dimen/m90"
            android:layout_marginTop="@dimen/m3"
            android:id="@+id/tv_shop_name"
            android:textColor="@color/black"
            android:textSize="@dimen/m14" />

        <TextView
            android:id="@+id/tv_count"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/m15"
            android:layout_marginLeft="@dimen/m90"
            android:layout_marginTop="@dimen/m26"
            android:textSize="@dimen/m11" />

        <TextView
            android:id="@+id/tv_money"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/m16"
            android:layout_marginLeft="@dimen/m90"
            android:layout_marginTop="@dimen/m49"
            android:textColor="#4f4f4f"
            android:textSize="@dimen/m13" />

        <!--<ImageView-->
            <!--android:id="@+id/switch_shop"-->
            <!--android:src="@mipmap/head"-->
            <!--android:layout_width="@dimen/m60"-->
            <!--android:layout_height="@dimen/m30" />-->

        <TextView
            android:layout_width="@dimen/m60"
            android:layout_height="@dimen/m30"
            android:layout_marginLeft="@dimen/m285"
            android:layout_marginTop="@dimen/m18"
            android:switchMinWidth="@dimen/m20"
            android:textSize="@dimen/m13"
            android:gravity="center"
            android:textColor="@color/white"
            android:id="@+id/switch_shop" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/m1"
        android:background="@color/gray2" />
</LinearLayout>